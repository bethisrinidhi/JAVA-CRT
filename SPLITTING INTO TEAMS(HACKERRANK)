SPLITTING INTO TEAMS (HACKERRANK):

import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
     Scanner sc=new Scanner(System.in);
        int a,b;
        a=sc.nextInt();
        b=sc.nextInt();
        int d=a/b;
        int r=a%b;
        System.out.println("The number of students in each team is "+d+" and left out is "+r);
    }
}
