FACTORIAL SUM (LOOPS)-HACKERRANK:

import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
    Scanner s=new Scanner(System.in);
        int n=s.nextInt();
        int r=0,k=1;
        int sum=0;
        while(n>0){
            r=n%10;
            n=n/10;
            k=1;
        for(int i=1;i<=r;i++){
            k=k*i;
              }
            sum=sum+k; 
          }
        System.out.println(sum);
    }
}
